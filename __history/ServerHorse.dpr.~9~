program ServerHorse;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils, Horse;

begin
  THorse.Get('/ping',
    procedure(Req: THorseRequest; Res: THorseResponse)
    begin
      Res.Send('pong');
    end);

  THorse.Get('/clientes',
  procedure(Req: THorseRequest; Res: THorseResponse)
  begin
    Res.Send('Consulta de clientes');
  end);

  THorse.Post('/clientes',
  procedure(Req: THorseRequest; Res: THorseResponse)
  begin

  end);

  THorse.Listen(9000);
end.
